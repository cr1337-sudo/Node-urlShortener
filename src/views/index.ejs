<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <link rel="stylesheet" href="/css/styles.css">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Document</title>
</head>

<body>
   <h1>URL SHRINKER</h1>
   <div class="container">

      <form action="/shortUrls" method="POST">
         <input type="url" name="fullUrl" id="fullUrl">
         <button class="submit-btn" type="submit">Shrink!</button>
      </form>
   </div>

   <table class="table table-striped table-responsive">
      <thead>
         <tr>
            <th>Full URL</th>
            <th>Short URL</th>
            <th>Clicks</th>
         </tr>
      </thead>
      <tbody>
         <% shortUrls.forEach(shortUrl=> { %>
            <tr>
               <td><a href="<%= shortUrl.fullUrl %>">
                     <%= shortUrl.fullUrl %>
                  </a></td>
               <td><a href="<%= shortUrl.shortUrl %>">
                     <%= shortUrl.shortUrl %>
                  </a></td>
               <td>
                  <%= shortUrl.clicks %>
               </td>
            </tr>
            <% }) %>
      </tbody>
   </table>

</body>

</html>